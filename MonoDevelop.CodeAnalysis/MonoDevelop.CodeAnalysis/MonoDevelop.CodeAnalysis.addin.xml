<Addin  id          = "CodeAnalysis"
        namespace   = "MonoDevelop"
	name        = "MonoDevelop CodeAnalysis addin"
	author      = "Ben Motmans"
	copyright   = "MIT/X11"
	url         = "http://code.google.com/p/md-codeanalysis"
	description = "MonoDevelop CodeAnalysis addin"
	category    = "Code Analysis"
	version     = "0.1.0">

	<Dependencies>
		<Addin id="Components" version="1.9.0"/>
		<Addin id="Core" version="1.9.0"/>
		<Addin id="Core.Gui" version="1.9.0"/>
		<Addin id="Projects" version="1.9.0"/>
		<Addin id="Projects.Gui" version="1.9.0"/>
		<Addin id="Ide" version="1.9.0"/>
	</Dependencies>

	<Extension path="/MonoDevelop/Ide/Commands">
		<Command id="MonoDevelop.CodeAnalysis.CodeAnalysisCommands.AnalyzeProject" _label="Analyze Project"
			defaultHandler="MonoDevelop.CodeAnalysis.AnalyzeHandler"/>

		<Command id="MonoDevelop.CodeAnalysis.CodeAnalysisCommands.AnalyzeSolution" _label="Analyze Solution"
			defaultHandler="MonoDevelop.CodeAnalysis.AnalyzeHandler"/>
	</Extension>

	<Extension path="/MonoDevelop/Ide/ContextMenu/ProjectPad/Project">
		<CommandItem id="MonoDevelop.CodeAnalysis.CodeAnalysisCommands.AnalyzeProject" />
	</Extension>


	<Extension path="/MonoDevelop/Ide/ContextMenu/ProjectPad/Solution">
		<CommandItem id="MonoDevelop.CodeAnalysis.CodeAnalysisCommands.AnalyzeSolution" />
	</Extension>

	<Runtime>
		<Import assembly="MonoDevelop.CodeAnalysis.dll"/>
	</Runtime>

	<Localizer type="Gettext" catalog="monodevelop-codeanalysis" />
</Addin>
